<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>noodleDig &ndash; {% block title %}Home{% endblock %}</title>
        {#<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />#}
        {% block stylesheets %}
            <link href="{{asset('bundles/SkNd/css/reset.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{asset('bundles/SkNd/css/main.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{asset('bundles/SkNd/css/typography.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
            
        {% block javascripts %}
            <script src="{{ asset('bundles/SkNd/scripts/jquery-1.7.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/SkNd/scripts/tb-scripts.js') }}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>
        <div id="header">
            {# the 'path' function can be used to target any particular route defined in the routing config file #}
            <a href="{{path('index')}}" title="Go back to noodleDig home page">noodleDig</a>
            {#<a href="{{path('setMedia', {'mediaType' : 'film'})}}" title="Go to noodleDig Films">Films</a>
            <a href="{{path('setMedia', {'mediaType' : 'tv'})}}" title="Go to noodleDig TV">TV</a>
            <a href="{{path('setMedia', {'mediaType' : 'music'})}}" title="Go to noodleDig Music">Music</a>#}
            {% block topNavLinks %}
            <ul id="memoryWalls">
                <a href="{{path('memoryWallsIndex')}}">Memory Walls</a>
                {# if logged in #}
                {#% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a href="{{path('memoryWallsIndex', {'username':app.user.username}) }}">My Memory Walls</a>
                {% else %}
                    <a href="{{path('memoryWallsIndexAuthenticate') }}">My Memory Walls</a>
                {% endif %#}
                <a href="{{path('memoryWallsPersonalIndex') }}">My Memory Walls</a>
                <a href="{{path('memoryWallCreate')}}">Add a new Memory Wall</a>
            </ul>
            {% include 'SkNdUserBundle:Default:loginPanel.html.twig' %}
            {% endblock %}
        </div>
        {% if app.session.getFlashes() %}    
        <div id="flashMessages">
            <ul>
            {% for key, message in app.session.getFlashes() %}
            <li class="{{ key }}">{{ message|trans({}, 'FOSUserBundle') }}</li>
            {% endfor %}   
            </ul>
        </div>
        {% endif %}
    {% block body %}

    {% endblock %}
        
    </body>
</html>


