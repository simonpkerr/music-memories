<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="SkNd\UserBundle\Entity\User">
        
        <property name="firstname">
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">fos_user.firstname.short</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">80</option>
                <option name="message">fos_user.firstname.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        
        <property name="surname">
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">fos_user.surname.short</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">80</option>
                <option name="message">fos_user.surname.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        
    </class>
    
    <class name="SkNd\UserBundle\Entity\MemoryWall">
        <property name="name">
            <constraint name="MinLength">
                <option name="limit">5</option>
                <option name="message">memory_wall.name.short</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">35</option>
                <option name="message">memory_wall.name.long</option>
            </constraint>
            <constraint name="NotBlank">
                <option name="message">memory_wall.name.blank</option>
            </constraint>
        </property>
        <property name="description">
            <constraint name="MinLength">
                <option name="limit">5</option>
                <option name="message">memory_wall.description.short</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">100</option>
                <option name="message">memory_wall.description.long</option>
            </constraint>
        </property>
    </class>
    
    
</constraint-mapping>
