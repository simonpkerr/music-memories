<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="SkNd\UserBundle\Entity\User">
        <getter property="tacagreement">
            <constraint name="True">
                <option name="message">You must accept our terms and conditions</option>
            </constraint>
        </getter>
        
        <property name="firstname">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">80</option>
                <option name="minMessage">fos_user.firstname.short</option>
                <option name="maxMessage">fos_user.firstname.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        
        <property name="lastname">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">80</option>
                <option name="minMessage">fos_user.lastname.short</option>
                <option name="maxMessage">fos_user.lastname.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

    </class>
    
    <class name="SkNd\UserBundle\Entity\MemoryWall">
        <property name="name">
            <constraint name="Length">
                <option name="min">5</option>
                <option name="max">35</option>
                <option name="minMessage">memory_wall.name.short</option>
                <option name="maxMessage">memory_wall.name.long</option>
            </constraint>
            <constraint name="NotBlank">
                <option name="message">memory_wall.name.blank</option>
            </constraint>
        </property>
        <property name="description">
            <constraint name="Length">
                <option name="min">5</option>
                <option name="minMessage">memory_wall.description.short</option>
                <option name="max">100</option>
                <option name="maxMessage">memory_wall.description.long</option>
            </constraint>
        </property>
    </class>
    
    <class name="SkNd\UserBundle\Entity\MemoryWallUGC">
        <property name="image">
            <constraint name="Image">
                <option name="maxSize">2M</option>
                <option name="maxSizeMessage">memory_wall.ugc.add.image.max_size</option>
                <!--option name="mimeTypes">
                    <value>application/jpeg</value>
                    <value>application/gif</value>
                    <value>application/png</value>
                </option>
                <option name="mimeTypesMessage">memory_wall.ugc.add.image.invalid</option-->
            </constraint>
        </property>
        <property name="title">
            <constraint name="Length">
                <option name="max">50</option>
                <option name="maxMessage">memory_wall.ugc.title.long</option>
                <option name="min">2</option>
                <option name="minMessage">memory_wall.ugc.title.short</option>
            </constraint>
            <constraint name="NotBlank">
                <option name="message">memory_wall.ugc.title.blank</option>
            </constraint>
        </property>
        <property name="comments">
            <constraint name="Length">
                <option name="max">140</option>
                <option name="maxMessage">memory_wall.ugc.comments.long</option>
                <option name="min">2</option>
                <option name="minMessage">memory_wall.ugc.comments.short</option>
            </constraint>
        </property>
    </class>
    
    
</constraint-mapping>
