<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="SkNd\UserBundle\Entity\User">
        
        <property name="firstname">
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">fos_user.name.short</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">80</option>
                <option name="message">fos_user.name.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        
        <property name="surname">
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">fos_user.username.short</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">80</option>
                <option name="message">fos_user.username.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        
    </class>
    
    
</constraint-mapping>
