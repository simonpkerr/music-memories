<p>Page {{currentPage}} of {{pagerParams['totalPages']}}</p>

<ul class="pager">
{% if currentPage != 1 %}      
        <li><a href="{{path('search', {'decade':decade,'media':media,'genre':genre,'page':1})}}">Page 1</a></li>
        <li><a href="{{path('search', {'decade':decade,'media':media,'genre':genre,'page':currentPage-1})}}">Previous Page</a></li>
{% endif %}   
{# .. is short hand for the range function that loops from a lower to upper bound #}        
{% for pagerLink in pagerParams['pagerLowerBound']..pagerParams['pagerUpperBound']  %}
        <li {% if pagerLink == currentPage %} class="selected" {%endif%}><a href="{{path('search', {'decade':decade,'media':media,'genre':genre,'page':pagerLink})}}">{{pagerLink}}</a></li></li>
{% endfor %}
{% if not(currentPage == pagerParams['totalPages']) %}
        <li><a href="{{path('search', {'decade':decade,'media':media,'genre':genre,'page':currentPage+1})}}">Next Page</a></li>
{% endif %}  
        
</ul>
